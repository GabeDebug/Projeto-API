{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Web API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/WebApplication1/bin/Debug/net8.0/WebApplication1.dll",
      "args": [],
      "cwd": "${workspaceFolder}/WebApplication1",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
